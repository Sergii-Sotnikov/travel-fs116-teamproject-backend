    "schemas": {
      "loginUser": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "example": "myStrongPassword123"
          }
        }
      },
      "registerUser": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "example": "myStrongPassword123"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "description": "User's unique identifier (MongoDB ObjectId)",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          },
          "name": {
            "description": "User's full name",
            "type": "string",
            "example": "Serhii Gaievyi"
          },
          "avatarUrl": {
            "description": "Link to user's avatar image",
            "type": "string",
            "format": "uri",
            "example": "https://res.cloudinary.com/demo/image/upload/avatar.png"
          },
          "articlesAmount": {
            "description": "Number of articles created by the user",
            "type": "integer",
            "example": 12
          },
          "description": {
            "description": "Short description or bio of the user",
            "type": "string",
            "example": "Full Stack Developer from Ukraine"
          },
          "email": {
            "description": "User's email address",
            "type": "string",
            "format": "email",
            "example": "gaevuha@gmail.com"
          },
          "password": {
            "description": "User's password (hashed in the database)",
            "type": "string",
            "example": "$2b$10$abcdefgHashedPasswordExample"
          },
          "createdAt": {
            "description": "Date when the user was created",
            "type": "string",
            "format": "date-time",
            "example": "2025-11-06T18:32:41.123Z"
          },
          "updatedAt": {
            "description": "Date when the user was last updated",
            "type": "string",
            "format": "date-time",
            "example": "2025-11-06T18:45:12.456Z"
          }
        }
      },
      "refreshToken": {
        "type": "object",
        "required": [
          "refreshToken"
        ],
        "properties": {
          "refreshToken": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        }
      },
      "resetPassword": {
        "type": "object",
        "required": [
          "token",
          "newPassword"
        ],
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "newPassword": {
            "type": "string",
            "example": "NewStrongPassword123"
          }
        }
      },
      "requestResetEmail": {
        "type": "object",
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "john@example.com"
          }
        }
      },
      "story": {
        "type": "object",
        "required": [
          "_id",
          "img",
          "title",
          "article",
          "category",
          "ownerId",
          "date",
          "favoriteCount",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "example": "672b6cfea9f43a5e8f9f21a2"
          },
          "img": {
            "type": "string",
            "example": "https://example.com/images/story1.jpg"
          },
          "title": {
            "type": "string",
            "example": "My Travel Story"
          },
          "article": {
            "type": "string",
            "example": "A detailed story about my trip to Iceland..."
          },
          "category": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "example": "672a5fe1c31a4c67fdfb12f9"
              }
            }
          },
          "ownerId": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string",
                "example": "671f8a22b5e9a8e4c1d7f9b3"
              }
            }
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "example": "2025-10-25T12:00:00.000Z"
          },
          "favoriteCount": {
            "type": "integer",
            "example": 4
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-10-08T18:21:10.157+00:00"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-10-08T18:21:10.157+00:00"
          }
        }
      }
    }
  }
}